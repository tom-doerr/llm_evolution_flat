[MASTER]
# Allow a single large file
max-module-lines=10000

[MESSAGES CONTROL]
# Disable these checks
disable=
    missing-docstring,
    too-few-public-methods,
    too-many-lines,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-many-instance-attributes,
    too-many-public-methods,
    too-many-return-statements,
    too-many-boolean-expressions

[DESIGN]
# Set complexity thresholds
max-args=10
max-locals=20
max-returns=8
max-branches=15
max-statements=50
max-parents=7
max-attributes=15
max-public-methods=20
max-line-length=120

[BASIC]
# Allow single-letter variable names
good-names=i,j,k,ex,run,x,y,z
